---
extends: default
ignore:
  - ._*
  - 'charts/*/charts/*'  # Ignore Helm chart dependencies
  - 'charts/*/templates/*'  # Ignore Helm templates
  - 'charts/*/crds/*'  # Ignore Custom Resource Definitions
rules:
  comments:
    min-spaces-from-content: 1
  line-length:
    max: 125
    level: warning
